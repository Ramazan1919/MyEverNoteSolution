

@model MyEverNote.Entities.Note
@{
    ViewBag.Title = "Note Ekle";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-3">
        @using (Html.BeginForm("Create", "Notes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Note Ekle</h4>
            <hr />
            @Html.ValidationSummary(false)

            <div class="col-md-3">

                @*<img src="~/Images/" class="img-circle" />*@

                @(Html.HiddenFor(model => model.NoteImageFilename))
                <br />
                <br />
                <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" />
                <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                <span> <i>Lütfen jpg,png formatı kullanın</i></span>

            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Text, 5, 30, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IsDraft, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsDraft)
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>


        </div>


        }

    </div>
    </div>