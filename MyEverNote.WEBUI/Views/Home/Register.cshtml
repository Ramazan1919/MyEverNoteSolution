@using (Html.BeginForm())
{
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login1001">
                <div class="login100-form-title" style="background-image:url(../../Content/Login/images/bg-01.jpg);">
                    <span class="login100-form-title-1">
                       ÜYE OL
                    </span>
                </div>
               

                @Html.ValidationSummary(false)
                    <form class="login100-form validate-form ">
                        <div class="wrap-input100 validate-input m-b-18 " data-validate="Username is required">

                            <span class="label-input100">Adınız</span>
                            @Html.TextBoxFor(model => model.Name, new { @class = "input100", placeholder = "Kullanıcı Adı Giriniz", type = "text", name = "username" })
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-18" data-validate="Email is required">
                            <span class="label-input100">E-Posta</span>
                            @Html.TextBoxFor(model => model.Email, new { @class = "input100", placeholder = "Mail Adresiniz", type = "Email", name = "email" })

                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span class="label-input100">Şifre</span>
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", placeholder = "Şifrenizi Giriniz", type = "Password", name = "password" })

                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span class="label-input100"> Tekrar Şifre</span>
                            @Html.TextBoxFor(model => model.RePassword, new { @class = "input100", placeholder = "Şifrenizi Giriniz", type = "Password", name = "repassword" })
                         </div>
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">
                               Kayıt
                            </button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
}
